name = "limitless-mcp-server"
main = "src/github-oauth-index.ts"
compatibility_date = "2024-09-23"
compatibility_flags = ["nodejs_compat"]

[[durable_objects.bindings]]
name = "MCP_AGENT"
class_name = "LimitlessMCPAgent"

[[migrations]]
tag = "v1"
new_sqlite_classes = ["LimitlessMCPAgent"]

# Enable logging in production (optional)
# [observability.logs]
# enabled = true

# KV namespace for OAuth storage
# Create with: npx wrangler kv namespace create OAUTH_KV
# Then add the generated ID below
[[kv_namespaces]]
binding = "OAUTH_KV"
id = "YOUR_KV_NAMESPACE_ID_HERE"
preview_id = "YOUR_PREVIEW_KV_ID_HERE"

[vars]
# Non-sensitive configuration can go here

# Add your secrets using:
# wrangler secret put LIMITLESS_API_KEY
# wrangler secret put GITHUB_CLIENT_ID  
# wrangler secret put GITHUB_CLIENT_SECRET